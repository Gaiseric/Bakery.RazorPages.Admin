@page "{id:int}"
@model Bakery.RazorPages.Admin.Pages.Orders.DeleteModel
@{
    ViewData["Title"] = "Delete order";
}

<h1>Delete order</h1>

<hr />
<h5>Are you sure you want to delete order #@Model.Order.Id? Invoice will be created automatically.</h5>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.CustomerPhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.CustomerPhone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderShipping)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderShipping)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderProduct)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderProduct)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderQuantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderQuantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderPrice)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Order.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>